{
  "name": "development",
  "description": "",
  "json_class": "Chef::Environment",
  "chef_type": "environment",

  "default_attributes": {
    "nginx": {
      "sites": {
        "{{name}}": {
          "inherits": "my-app",
          "server_name": "{{hostname}}",
          "docroot": "/vagrant/public",
          "capistrano": false
        }
      }
    },
    "mysql": {
      "users": {
        "{{name}}": {
          "database_name": "{{name}}"
        }
      }
    },

    "mysql": {
      "allow_remote_root": true,
      "bind_address": "0.0.0.0"
    },

    "iptables-standard": {
      "allowed_incoming_ports": {"mysql": "mysql"}
    },
    "yum-cron": {
      "cleanday": 9
    }
  },

  "override_attributes": {
    "capistrano": {
      "group": false
    },
    "data-bag-merge": {
      "environments": {
        "encrypted": false
      }
    }
  }
}
