{
  "name": "development",
  "description": "",
  "json_class": "Chef::Environment",
  "chef_type": "environment",

  "default_attributes": {
    "nginx": {
      "sites": {
        "{{hostname}}": {
          "server_name": "{{hostname}}",
          "docroot": "/vagrant/public",
          "protocols": ["http", "https"]
        }
      }
    },

    "mysql": {
      "users": {
        "{{name}}": {
          "password": "{{name}}",
          "database_name": "{{name}}"
        }
      }
    },

    "packages": [ "git" ],

    "rbenv": {
      "rubies": ["1.9.3-p551"],
      "global": "1.9.3-p551"
    },

    "mailcatcher": {
      "bin": "/usr/local/rbenv/shims/mailcatcher"
    },

    "iptables-standard": {
      "allowed_incoming_ports": {"mailcatcher": "1080"}
    }
  },

  "override_attributes": {
    "data-bag-merge": {
      "environments": {
        "encrypted": false
      }
    }
  }
}
