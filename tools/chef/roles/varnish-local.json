{
  "name": "varnish-local",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "Varnish HTTP cache role for when hosted on the same server as backend",
  "override_attributes": {
    "magento": {
      "apache": {
        "unsecure_port": "8080"
      }
    },
    "varnish": {
      "backend_port": "8080",
      "listen_port": "80"
    },
    "apache": {
      "listen_ports": [8080, 443]
    },
    "apache-sites": {
      "insecure_port": 8080
    },
    "nginx-sites": {
      "insecure_port": 8080
    }
  },
  "run_list": [
    "recipe[varnish]"
  ]
}
