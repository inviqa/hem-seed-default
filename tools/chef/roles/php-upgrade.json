{
  "name": "php-upgrade",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "PHP upgrader",
  "default_attributes": {
    "php": {
      "replace_packages": [
        "php-common",
        "php54-common",
        "php54w-common",
        "php54u-common",
        "php55u-common",
        "php56u-common"
      ]
    },
    "package_replacements": {
      "php": {
        "enabled": true,
        "from": "replace_packages",
        "to": "replace_package_target"
      }
    }
  },
  "run_list": [
    "yum-webtatic",
    "package-replace"
  ]
}
